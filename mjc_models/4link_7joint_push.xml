<mujoco model="arm3d">

    <compiler inertiafromgeom="true" angle="radian" coordinate="local" />
    <option timestep="0.01" gravity="0 0 0" iterations="20" integrator="RK4" />

    <default>
        <joint limited="true" range="-3.14159 3.14159" armature="0.04" damping="1" />
        <geom friction=".5 .1 .1" margin="0.002" condim="1" contype="0" conaffinity="0" />
        <motor forcelimited="true" forcerange="-5 5"/>
    </default>

    <worldbody>
        <body name="palm" pos="-0.2 0.25 0">
            <geom type="capsule" fromto="0 -0.0625 0 0 0.0625 0" size="0.075"/>

            <body name="proximal_1" pos="0 0 0">
                <joint name="y1" type="hinge" pos="0 0 0" axis="0 1 0" range="-2.5236 2.3963" damping="1.0" />
                <joint name="z1" type="hinge" pos="0 0 0" axis="0 0 1" range="-2.5236 2.3963" damping="1.0" />
                <geom type="capsule"  fromto="0 0 0 0.25 0 0" size="0.0625" contype="1" conaffinity="1"/>
                <body name="distal_1" pos="0.25 0 0">
                    <joint name="y2" type="hinge" pos="0 0 0" axis="0 1 0" range="-2.3213 2.3" damping="1.0"/>
                    <geom type="capsule"  fromto="0 0 0 0.25 0 0" size="0.05" contype="1" conaffinity="1"/>
                    <body name="distal_2" pos="0.25 0 0">
                        <joint name="y3" type="hinge" pos="0 0 0" axis="0 1 0" range="-2.3213 2.3" damping="1.0"/>
                        <joint name="z3" type="hinge" pos="0 0 0" axis="0 0 1" range="-2.3213 2.3" damping="1.0"/>
                        <geom type="capsule" fromto="0 0 0 0.25 0 0" size="0.0375" contype="1" conaffinity="1"/>
                        <body name="distal_3" pos="0.25 0 0">
                            <joint name="y4" type="hinge" pos="0 0 0" axis="0 1 0" range="-2.3213 2.3" damping="1.0"/>
                            <geom type="capsule" fromto="0 0 0 0.25 0 0" size="0.025" contype="1" conaffinity="1"/>
                            <body name="distal_4" pos="0.25 0 0">
                                <joint name="y5" type="hinge" pos="0 0 0" axis="0 0 1" range="-2.3213 2.3" damping="1.0"/>
                                <geom type="box" pos="0 -0.075 0" size="0.01 0.15 0.15" contype="1" conaffinity="1" density="0.0001" />
                                <site name="tip arm" pos="0 -0.1 0" size="0.01" />
                            </body>
                        </body>
                    </body>
                </body>
            </body>
        </body>
        <body name="object" pos="1.3 0.0 0.0">
            <geom rgba="1. 1. 1. 1" type="sphere" size="0.05" density='0.00001' contype="1" conaffinity="1"/>
            <joint name="obj_slidez" type="slide" pos="0.1 0.05 0.05" axis="0 0 1" range="-10.3213 10.3" damping="0.5"/>
            <joint name="obj_slidex" type="slide" pos="0.05 0.05 0.05" axis="1 0 0" range="-10.3213 10.3" damping="0.5"/>
            <!--            <joint name="obj_hinge" type="hinge" pos="0.1 0.05 0.05" axis="0 1 0" range="-10.3213 10.3" damping="0.1"/>-->
            <body name="distal_10" pos="0 0 0">
                <site name="obj_pos" pos="0.025 -0.025 0.025" size="0.01" />
            </body>
        </body>

        <body name="goal" pos="0 0 0">
            <geom rgba="1. 0. 0. 1" type="box" size="0.05 0.05 0.05" density='0.00001' contype="0" conaffinity="0"/>
            <body name="distal_11" pos="0 0 0">
                <site name="goal_pos" pos="0.05 0.05 0.05" size="0.01" />
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor joint="y1" name="Ay1"/>
        <motor joint="z1" name="Az1"/>
        <motor joint="y2" name="Ay2"/>
        <motor joint="y3" name="Ay3"/>
        <motor joint="z3" name="Az3"/>
        <motor joint="y4" name="Ay4"/>
        <motor joint="y5" name="Ay5"/>
    </actuator>

</mujoco>
