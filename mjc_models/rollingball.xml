<mujoco model="rollingball">
  <compiler inertiafromgeom="true" angle="radian" coordinate="local"/>
  <option timestep="0.01" gravity="0 0 -10" iterations='20'/>
  <default>
    <joint armature='0.04' damping="1" limited="false"/>
    <geom friction=".5 .1 .1" margin="0.002" condim="3" />
  </default>

  <worldbody>
    <geom name="floor" type="box" pos="0 0 0" size="10 10 0.01" />
    <body name="ball" pos="0 0 0.21">
      <geom name="ball_geom" type="sphere" pos="0 0 0" size="0.2" />
      <site name="ball_pos" pos="0 0 0" size="0.01"/>
      <joint name="ball_x"  type="slide" pos="0 0 0" axis="1 0 0"/>
      <joint name="ball_y"  type="slide" pos="0 0 0" axis="0 1 0"/>
      <joint name="ball_rx" type="hinge" pos="0 0 0" axis="1 0 0" />
      <joint name="ball_ry" type="hinge" pos="0 0 0" axis="0 1 0" />
      <joint name="ball_rz" type="hinge" pos="0 0 0" axis="0 0 1" />
    </body>
  </worldbody>

  <actuator>
    <motor joint="ball_rx" ctrllimited="true" ctrlrange="-10 10"/>
    <motor joint="ball_ry" ctrllimited="true" ctrlrange="-10 10"/>
  </actuator>

</mujoco>
