<mujoco model="Tendon Finger">
	<compiler coordinate="global"/>
    <option timestep="0.01" gravity="0 0 0" iterations="20" integrator="Euler" />
	<visual>
		<headlight diffuse=".7 .7 .7"/>
	</visual>

	<default>
		<geom  density="1" contype="0" conaffinity="0" rgba=".9 .3 .1 1" group="1"/>
		<joint limited="true"/>
		<site type="sphere" size="0.05"/>
		<tendon width="0.02"/>
	</default>

	<worldbody>
		<site name="top_0" pos="2.5 0 0.25"/>
		<site name="bot_0" pos="2.5 0 -0.25"/>


		<geom name="MCP_wrap"  type="sphere" pos="3.1 0 0" size="0.42" rgba="0 .7 .7 .5"/>


		<body name="Proximate">
			<joint type="hinge" pos="3 0 0" axis="0 1 0" range="-90 90"/>
			
			<geom type="capsule" fromto="3 0 0  5 0 0" size="0.2"/>
			
            <site name="top_1" pos="3.5 0 0.25"/>
            <site name="bot_1" pos="3.5 0 -0.25"/>
            <site name="top_2" pos="4.5 0 0.25"/>
            <site name="bot_2" pos="4.5 0 -0.25"/>
			
			<geom name="PIP_wrap"  type="cylinder" pos="5 0 0" zaxis="0 1 0" size="0.2 0.2" rgba="0 .7 .7 .5"/>
			
			<body name="Intermediate">
				<joint type="hinge" pos="5 0 0" axis="0 1 0" range="-90 90"/>
				
				<geom type="capsule" fromto="5 0 0  7 0 0" size="0.15"/>
                <site name="top_3" pos="5.5 0 0.25"/>
                <site name="bot_3" pos="5.5 0 -0.25"/>
                <site name="top_4" pos="6.5 0 0.25"/>
                <site name="bot_4" pos="6.5 0 -0.25"/>
            
			
				<body name="Distal">
					<joint type="hinge" pos="7 0 0" axis="0 1 0" range="-90 90"/>

					<geom name="DIP_wrap"  type="cylinder" pos="7 0 0"
						zaxis="0 1 0" size="0.15 0.16" rgba="0 .7 .7 .5"/>
                        <site name="top_5" pos="7.5 0 0.25"/>
                        <site name="bot_5" pos="7.5 0 -0.25"/>
                        
					
					<geom type="capsule" fromto="7 0 0  8.5 0 0" size="0.1"/>
					
					<site name="I_D1" pos="4.9130 0.0148 -3.2080"/>
					<site name="I_D2" pos="4.5144 0.0148 -3.3888"/>
				</body>
			</body>
		</body>
	</worldbody>

	<tendon>
		<spatial name="flexorShort">
			<site site="top_4"/>
			<site site="top_5"/>
		</spatial>
        <spatial name="extensorShort">
            <site site="bot_4"/>
            <site site="bot_5"/>
        </spatial>
        <spatial name="flexorLong">
            <site site="top_2"/>
            <site site="top_3"/>
        </spatial>
        <spatial name="extensorLong">
            <site site="bot_2"/>
            <site site="bot_3"/>
        </spatial>
        <spatial name="flexorLongest">
            <site site="top_1"/>
            <site site="top_2"/>
        </spatial>
        <spatial name="extensorLongest">
            <site site="bot_1"/>
            <site site="bot_2"/>
        </spatial>
        
        

