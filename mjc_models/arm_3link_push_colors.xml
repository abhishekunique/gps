<mujoco model="arm3d">
    <compiler inertiafromgeom="true" angle="radian" coordinate="local" />
    <option timestep="0.01" gravity="0 0 0" iterations="20" integrator="Euler" />

    <default>
        <joint armature='0.04' damping="1" limited="true"/>
        <geom friction=".8 .1 .1" density="300" margin="0.002" condim="1" contype="1" conaffinity="1"/>
    </default>

    <worldbody>
        <body name="palm" pos="0 0 0">
            <geom type="capsule" fromto="0 -0.05 0 0 0.05 0" size="0.06"/>
            <body name="proximal_1" pos="0 0 0">
                <joint name="proximal_j_1" type="hinge" pos="0 0 0" axis="0 1 0" range="-2.5236 2.3963" damping="1.0" />
                <geom type="capsule"  fromto="0 0 0 0.2 0 0" size="0.03" contype="1" conaffinity="1"/>
                <body name="distal_1" pos="0.2 0 0">
                    <joint name="distal_j_1" type="hinge" pos="0 0 0" axis="0 1 0" range="-2.3213 2.3" damping="1.0"/>
                    <geom type="capsule"  fromto="0 0 0 0.2 0 0" size="0.03" contype="1" conaffinity="1"/>
                    <body name="distal_2" pos="0.2 0 0">
                        <joint name="distal_j_2" type="hinge" pos="0 0 0" axis="0 1 0" range="-2.3213 2.3" damping="1.0"/>
                        <geom type="capsule" fromto="0 0 0 0.2 0 0" size="0.03" contype="1" conaffinity="1"/>
                        <body name="distal_4" pos="0.2 0 0">
                            <site name="tip arm" pos="0.05 0 0" size="0.005" />
                            <geom type="capsule" fromto="0 0 -0.1 0 0 0.1" size="0.02" contype="1" conaffinity="1" />
                            <geom type="capsule" fromto="0 0 -0.1 0.1 0 -0.1" size="0.02" contype="1" conaffinity="1" />
                            <geom type="capsule" fromto="0 0 0.1 0.1 0 0.1" size="0.02" contype="1" conaffinity="1" />
                        </body>
                    </body>
                </body>
            </body>
        </body>

        <body name="goalred" pos="0.8 0.0 0.5">
            <geom rgba="1. 0. 0. 1" type="box" size="0.05 0.05 0.05" density='0.00001' contype="1" conaffinity="1"/>
            <joint name="red_x" type="slide" pos="0 0 0" axis="1 0 0" range="-10 10" damping="0.5"/>
            <joint name="red_z" type="slide" pos="0 0 0" axis="0 0 1" range="-10 10" damping="0.5"/>
            <site name="goal pos1" pos="0 0 0" size="0.01" />
        </body>

        <body name="goalgreen" pos="0.8 0.0 0.5">
            <geom rgba="0. 0.5 0. 1" type="box" size="0.05 0.05 0.05" density='0.00001' contype="1" conaffinity="1"/>
            <joint name="green_x" type="slide" pos="0 0 0" axis="1 0 0" range="-10 10" damping="0.5"/>
            <joint name="green_z" type="slide" pos="0 0 0" axis="0 0 1" range="-10 10" damping="0.5"/>
            <site name="goal pos2" pos="0 0 0" size="0.01" />
        </body>

        <body name="goalyellow" pos="0.8 0.0 0.5">
            <geom rgba="1. 1. 0. 1" type="box" size="0.05 0.05 0.05" density='0.00001' contype="1" conaffinity="1"/>
            <joint name="yellow_x" type="slide" pos="0 0 0" axis="1 0 0" range="-10 10" damping="0.5"/>
            <joint name="yellow_z" type="slide" pos="0 0 0" axis="0 0 1" range="-10 10" damping="0.5"/>
            <site name="goal pos3" pos="0 0 0" size="0.01" />
        </body>

        <body name="goalblack" pos="0.8 0.0 0.5">
            <geom rgba="0. 0. 0. 1" type="box" size="0.05 0.05 0.05" density='0.00001' contype="1" conaffinity="1"/>
            <joint name="black_x" type="slide" pos="0 0 0" axis="1 0 0" range="-10 10" damping="0.5"/>
            <joint name="black_z" type="slide" pos="0 0 0" axis="0 0 1" range="-10 10" damping="0.5"/>
            <site name="goal pos4" pos="0 0 0" size="0.01" />
        </body>
    </worldbody>


    <actuator>
        <motor joint="proximal_j_1" ctrlrange="-2 2" ctrllimited="true"/>
        <motor joint="distal_j_1" ctrlrange="-2 2" ctrllimited="true"/>
        <motor joint="distal_j_2" ctrlrange="-2 2" ctrllimited="true"/>
    </actuator>
</mujoco>
