<mujoco model="arm3d">

    <compiler inertiafromgeom="true" angle="radian" coordinate="local" />
    <option timestep="0.01" gravity="0 0 0" iterations="20" integrator="RK4" />
    <default>
        <joint limited="true" range="-3.14159 3.14159" armature="0.04" damping="1" />
        <geom friction=".5 .1 .1" margin="0.002" condim="1" contype="0" conaffinity="0" />
        <motor forcelimited="true" forcerange="-1 1"/>
    </default>

    <worldbody>
        <body name="robot" pos="0 0.0 0.0">
            <geom type="sphere" rgba="0 1 0 1" pos="0 0 0" size="0.15" contype="1" conaffinity="1" density="20" />
            <joint name="robotx" type="slide" pos="0.05 0.05 0.05" axis="1 0 0" range="-10.3213 10.3" damping="0.005"/>
            <joint name="roboty" type="slide" pos="0.05 0.05 0.05" axis="0 1 0" range="-10.3213 10.3" damping="0.005"/>
            <joint name="robotz" type="slide" pos="0.1 0.05 0.05" axis="0 0 1" range="-10.3213 10.3" damping="0.005"/>
            <body name="site" pos="0 0 0">
                <site name="end_eff" pos="0.025 0.025 0.025" size="0.01" />
            </body>
        </body>

	<body name="object" pos="1.3 0.0 0.0">
          <geom rgba="1. 1. 1. 1" type="sphere" size="0.05" density='0.00001' contype="1" conaffinity="1"/>
          <joint name="obj_slidez" type="slide" pos="0.1 0.05 0.05" axis="0 0 1" range="-10.3213 10.3" damping="0.5"/>
          <joint name="obj_slidex" type="slide" pos="0.05 0.05 0.05" axis="1 0 0" range="-10.3213 10.3" damping="0.5"/>
          <!--            <joint name="obj_hinge" type="hinge" pos="0.1 0.05 0.05" axis="0 1 0" range="-10.3213 10.3" damping="0.1"/>-->
          <body name="distal_10" pos="0 0 0">
            <site name="obj_pos" pos="0.025 -0.025 0.025" size="0.01" />
          </body>
	</body>

	<body name="goal" pos="0 0 0">
          <geom rgba="1. 0. 0. 1" type="box" size="0.05 0.05 0.05" density='0.00001' contype="0" conaffinity="0"/>
          <body name="distal_11" pos="0 0 0">
            <site name="goal_pos" pos="0.05 0.05 0.05" size="0.01" />
          </body>
	</body>
    </worldbody>

    <actuator>
        <motor joint="robotx" ctrlrange="-100.0 100.0" ctrllimited="true" />
        <motor joint="roboty" ctrlrange="-100.0 100.0" ctrllimited="true" />
        <motor joint="robotz" ctrlrange="-100.0 100.0" ctrllimited="true" />
    </actuator>

</mujoco>
